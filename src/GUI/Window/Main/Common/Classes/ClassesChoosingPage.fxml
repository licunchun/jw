    <children>
        <VBox prefHeight="660.0" prefWidth="1280.0">
            <children>
                <AnchorPane prefHeight="60.0" prefWidth="1280.0">
                    <children>
                        <ImageView fitHeight="60.0" fitWidth="1280.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../../../../Resources/Gray60x1280.png"/>
                            </image>
                        </ImageView>
                        <AnchorPane prefHeight="30.0" prefWidth="200.0">
                            <children>
                                <Label layoutX="14.0" layoutY="7.0" text="课堂编号"/>
                                <TextField fx:id="ClassesCodeField" layoutX="86.0" layoutY="3.0" prefWidth="100.0"/>
                            </children>
                        </AnchorPane>
                        <AnchorPane layoutX="200.0" prefHeight="30.0" prefWidth="200.0">
                            <children>
                                <Label layoutX="14.0" layoutY="7.0" text="课堂名称"/>
                                <TextField fx:id="ClassesNameField" layoutX="86.0" layoutY="3.0" prefWidth="100.0"/>
                            </children>
                        </AnchorPane>
                        <AnchorPane layoutX="400.0" prefHeight="30.0" prefWidth="180.0">
                            <children>
                                <Label layoutX="14.0" layoutY="7.0" text="学时"/>
                                <TextField fx:id="ClassesPeriodField" layoutX="66.0" layoutY="3.0" prefWidth="100.0"/>
                            </children>
                        </AnchorPane>
                        <AnchorPane layoutX="580.0" prefHeight="30.0" prefWidth="180.0">
                            <children>
                                <Label layoutX="14.0" layoutY="7.0" text="学分"/>
                                <TextField fx:id="ClassesCreditField" layoutX="66.0" layoutY="3.0" prefWidth="100.0"/>
                            </children>
                        </AnchorPane>
                        <AnchorPane layoutX="760.0" prefHeight="30.0" prefWidth="200.0">
                            <children>
                                <Label layoutX="14.0" layoutY="7.0" text="教师名称"/>
                                <TextField fx:id="TeacherNameField" layoutX="86.0" layoutY="3.0" prefWidth="100.0"/>
                            </children>
                        </AnchorPane>
                        <AnchorPane layoutY="30.0" prefHeight="30.0" prefWidth="200.0">
                            <children>
                                <Label layoutX="14.0" layoutY="7.0" text="课程类型"/>
                                <ChoiceBox fx:id="ClassTypeChoiceBox" layoutX="86.0" layoutY="3.0" prefHeight="23.0"
