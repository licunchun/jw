                            </children>
                        </AnchorPane>
                        <AnchorPane layoutX="1160.0" layoutY="30.0" prefHeight="30.0" prefWidth="120.0">
                            <children>
                                <Button fx:id="TimeButton" layoutX="15.0" layoutY="5.0" mnemonicParsing="false"
                                        text="时间" onAction="#openTimePage"/>
                                <Button fx:id="SearchButton" layoutX="70.0" layoutY="5.0" mnemonicParsing="false"
                                        onAction="#doSearch" text="查询"/>
                            </children>
                        </AnchorPane>
                    </children>
                </AnchorPane>
                <AnchorPane fx:id="TableViewPane" prefHeight="600.0" prefWidth="1280.0"/>
            </children>
        </VBox>
    </children>
