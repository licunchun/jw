                            <children>
                                <Label layoutX="14.0" layoutY="7.0" text="课程种类"/>
                                <ChoiceBox fx:id="CourseTypeChoiceBox" layoutX="86.0" layoutY="3.0" prefHeight="23.0"
                                           prefWidth="100.0"/>
                            </children>
                        </AnchorPane>
                        <AnchorPane layoutX="400.0" layoutY="30.0" prefHeight="30.0" prefWidth="180.0">
                            <children>
                                <Label layoutX="14.0" layoutY="7.0" text="院校"/>
                                <ChoiceBox fx:id="SchoolChoiceBox" layoutX="66.0" layoutY="3.0" prefHeight="23.0"
                                           prefWidth="100.0"/>
                            </children>
                        </AnchorPane>
                        <AnchorPane layoutX="580.0" layoutY="30.0" prefHeight="30.0" prefWidth="180.0">
                            <children>
                                <Label layoutX="14.0" layoutY="7.0" text="校区"/>
                                <ChoiceBox fx:id="CampusChoiceBox" layoutX="66.0" layoutY="3.0" prefHeight="23.0"
