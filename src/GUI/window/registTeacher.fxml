<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="200.0" prefWidth="250.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.controller.RegistController">
    <children>
        <BorderPane prefHeight="200.0" prefWidth="250.0">
            <top>
                <Label text="注册页面" BorderPane.alignment="CENTER">
                    <font>
                        <Font size="36.0" />
                    </font>
                </Label>
            </top>
            <center>
                <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
                    <children>
                        <AnchorPane prefWidth="200.0">
                            <children>
                                <Label layoutX="14.0" layoutY="1.0" text="院校">
                                    <font>
                                        <Font size="20.0" />
                                    </font>
                                </Label>
                                <ChoiceBox fx:id="TeacherSchoolChooser" layoutX="86.0" layoutY="3.0" prefWidth="150.0" />
                            </children>
                        </AnchorPane>
                        <AnchorPane prefWidth="200.0">
                            <children>
                                <Label layoutX="14.0" layoutY="1.0" text="性别">
                                    <font>
                                        <Font size="20.0" />
                                    </font>
                                </Label>
                                <ChoiceBox fx:id="TeacherGenderChooser" layoutX="86.0" layoutY="3.0" prefWidth="150.0" />
                            </children>
                        </AnchorPane>
                        <AnchorPane prefHeight="100.0" prefWidth="250.0">
                            <children>
                                <Button fx:id="TeacherConfirmButton" layoutX="92.0" layoutY="29.0" mnemonicParsing="false" text="确认" onAction="#doTeacherConfirm">
                                    <font>
                                        <Font size="20.0" />
                                    </font>
                                </Button>
                            </children>
                        </AnchorPane>
                    </children>
                </VBox>
            </center>
        </BorderPane>
    </children>
</AnchorPane>
